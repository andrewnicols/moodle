{{!
    @template core/subtree

    This template renders the a card for the core/tree children.

    Example context (json):
    {
    }
}}
{{#haschildren}}
    {{#children}}
        <li {{!
            }}role="treeitem" {{!
            }}{{#haschildren}}{{!
                }}{{#expanded}}aria-expanded="true"{{/expanded}}{{!
                }}{{^expanded}}aria-expanded="false"{{/expanded}}{{!
            }}{{/haschildren}}{{!
        }}>
            {{#haschildren}}
                <p class="tree_item branch canexpand" tabindex="-1">
                    <a{{!
                        }} href="{{{url}}}"{{!
                        }} tabindex="-1"{{!
                    }}>
                        {{{name}}}
                    </a>
                </p>
                <ul role="group">
                    {{> core/subtree}}
                </ul>
            {{/haschildren}}
            {{^haschildren}}
                <p{{!
                    }} class="{{!
                        }}tree_item {{!
                        }}leaf {{!
                        }}{{#hasicon}}hasicon{{/hasicon}}{{!
                    }}"{{!
                    }} aria-labelledby="tree_item_{{id}}"{{!
                }}>
                    <a{{!
                        }} tabindex="-1"{{!
                        }} id="tree_item_{{id}}"{{!
                        }} href="{{{url}}}"{{!
                    }}>
                        {{#icon}}
                            {{#pix}}{{icon}}, {{component}}, {{#str}}{{title}}, {{component}}{{/str}}{{/pix}}}
                        {{/icon}}
                        <span class="item-content-wrap">{{{name}}}</span>
                    </a>
                </p>
            {{/haschildren}}
        </li>
    {{/children}}
{{/haschildren}}
