{{!
    @template core/itemchooser

    Chooser dialog template.

    Example context (json):
    {
        "title": "Chooser title",
        "options": {
            "label": "Option name",
            "description": "Option description",
            "urls": {
                "addoption": "http://addoptionurl.com"
            },
            "icon": "<img class='icon' src='http://urltooptionicon'>"
        }
    }
}}

<div data-region="carousel" class="carousel slide d-flex flex-fill">
    <div class="carousel-inner d-flex flex-fill" aria-live="polite">
        <div class="carousel-item p-3 active" data-id="items" data-region="modules">
            <div class="modchoosercontainer d-flex flex-column flex-fill" aria-label="{{#str}} activitymodules, core {{/str}}">
                <div class="searchcontainer mb-3">
                    {{>core/local/itemchooser/search}}
                </div>
                <div data-region="chooser-container" class="chooser-container">
                    <div class="nav nav-tabs flex-shrink-0 z-index-1" id="itemchooser-tabs-{{uniqid}}" role="tablist">
{{#tabList}}
                        <a class="nav-item nav-link {{#isActive}}active{{/isActive}} {{^visible}}d-none{{/visible}}"
                           id="{{name}}-tab-{{uniqid}}"
                           data-id="{{name}}"
                           data-tab-name="{{name}}"
                           data-region="{{name}}-tab-nav"
                           href="#{{name}}-{{uniqid}}"
                           role="tab"
                           aria-label="{{#str}} aria:favouritestab, core {{/str}}"
                           aria-controls="{{name}}-{{uniqid}}"
                           aria-selected="{{#isActive}}true{{/isActive}}{{^isActive}}false{{/isActive}}"
                           tabindex="{{#isActive}}0{{/isActive}}{{^isActive}}-1{{/isActive}}"
                        >
                            {{{title}}}
                        </a>
{{/tabList}}
                    </div>
                    <div class="tab-content flex-fill border-left border-right border-bottom bg-light" id="tabbed-items-{{uniqid}}">
                        <div xclass="tab-pane {{#isActive}}active{{/isActive}}" id="itemlist-{{uniqid}}" role="tabpanel" aria-labelledby="tab-{{uniqid}}">
                            <div class="optionscontainer d-flex flex-wrap p-1 mw-100 position-relative" role="menubar" data-region="chooser-options-container">
                                {{#items}}
                                    {{>core/local/itemchooser/item}}
                                {{/items}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item" data-id="help" data-region="help"></div>
        <!--The following div is used as a place for additional plugins to have widgets in the chooser.-->
        <div class="carousel-item" data-id="pluginCarousel" data-region="pluginCarousel"></div>
    </div>
</div>
